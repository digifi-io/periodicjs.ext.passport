<%- include('../../../../app/views/shared/header') %>
<%- include('../../../../app/views/shared/simple_nav') %>
<% 
  const capitalize = periodic.viewHelper.capitalize;
 %>
  <main>
    <article>
        <% if(locals.notification){%>
          <section>
            <input value="<%- locals.notification %>" disabled readonly style="width: 100%; font-size: 120%; margin: 0rem 0rem 1rem; padding: 1rem; background: whitesmoke; box-sizing: border-box; border: 1px solid lightgray;"/>
          </section> 
        <%}%>
        <section>
          <h3>Forgot <%-(locals.entityType!=='account')?'<span style="font-weight:normal">User</span> | <a href="'+locals.loginPaths.account_auth_forgot+'">Account</a>':'<a href="'+locals.loginPaths.user_auth_forgot+'">User</a> | <span style="font-weight:normal">Account</span>'%></h3>
        </section>
        <section>
          <form action="<%- forgotPost %>" method="post" autocomplete="off" >
            <input type="hidden" name="_csrf" value="<%- token %>"/>
            <input type="hidden" name="entitytype" value="<%- entityType %>"/>
            <section>
              <input type="email" name="email" placeholder="email@domain.com"/>
            </section>
            <section>
              <button type="submit" style="justify-content: center">Recover Password</button>
            </section>
          </form>
        </section>
    </article>
  </main>
<%- include('../../../../app/views/shared/footer') %>