<%- include('../../../../app/views/shared/simple_nav') %>
<% /* console.log(locals) */ %>
  <main>
    <article>
        <section>
          <h3>Reset Password</h3>
        </section>
        <section>
          <form method="post" action="<%- resetPost %>/<%- request.params.token %>">
            <input type="hidden" name="_csrf" value="<%- token %>"/>
            <input type="hidden" name="entitytype" value="<%- entitytype %>"/>
            <input type="password" placeholder="password" name="password"/>
            <input type="password" placeholder="confirm password" name="confirmpassword"/>
            <section>
              <button type="submit" style="justify-content: center">Reset</button>
              <a type="button" href="<%- loginPost %>" style="justify-content: center">Login</a>
            </section>
          </form>
        </section>
    </article>
  </main>
