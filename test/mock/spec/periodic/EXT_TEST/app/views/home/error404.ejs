<%- include('../shared/header') %>
<%- include('../shared/nav') %>
<% var errorTitle='';
try{
  errorTitle = error.toString().split('\n')[0];
} catch(e){
  errorTitle = error.message;
}
%>
<article>
  <section>
    <% if(appenvironment!=='production'){%>
    <details open="open">
      <summary>
        <%- errorTitle %>
      </summary>
      <div>
        <pre><%- error.stack %></pre>
      </div>
    </details>
    <%} 
    else{%>
      <h3>Internal Server Error</h3>
    <%} %>
  </section>
</article>
<%- include('../shared/footer') %>